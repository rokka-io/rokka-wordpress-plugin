{
  "name": "rokka/rokka-wordpress-plugin",
  "description": "Rokka integration plugin for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0",
  "homepage": "https://github.com/rokka-io/rokka-wordpress-plugin/",
  "authors": [
    {
      "name": "Liip AG",
      "email": "contact@liip.ch",
      "homepage": "https://liip.ch/",
      "role": "Developer"
    },
    {
      "name": "Juerg Hunziker",
      "email": "juerg.hunziker@liip.ch",
      "role": "Developer"
    },
    {
      "name": "Philippe Savary",
      "email": "philippe.savary@liip.ch",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/rokka-io/rokka-wordpress-plugin",
    "docs": "http://rokka.io",
    "issues": "https://github.com/rokka-io/rokka-wordpress-plugin/issues",
    "email": "contact@liip.ch"
  },
  "require": {
    "php": ">=7.1",
    "rokka/client": "^1.16.0"
  },
  "config": {
    "platform": {
      "php": "7.1"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "dev-develop",
    "squizlabs/php_codesniffer": "^3.6.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "wp-phpunit/wp-phpunit": "^5.9",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": "phpcs --standard=phpcs.xml",
    "test": "phpunit"
  }
}
