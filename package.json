{
  "name": "rokka-wordpress-plugin",
  "version": "3.1.1",
  "description": "Rokka integration plugin for WordPress",
  "main": "index.js",
  "scripts": {
    "dev": "parcel watch assets/js/app.js -d assets/dist",
    "watch": "parcel watch --no-hmr assets/js/admin.js assets/js/rokka-subject-area.js assets/js/settings.js -d assets/dist",
    "build": "parcel build assets/js/admin.js assets/js/rokka-subject-area.js assets/js/settings.js -d assets/dist",
    "lint": "eslint assets/js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokka-io/rokka-wordpress-plugin.git"
  },
  "keywords": [
    "rokka.io",
    "wordpress",
    "plugin"
  ],
  "author": "Liip AG",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/rokka-io/rokka-wordpress-plugin/issues"
  },
  "homepage": "https://github.com/rokka-io/rokka-wordpress-plugin#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "sass": "^1.26.3"
  },
  "dependencies": {
    "parcel-bundler": "^1.12.4"
  }
}
